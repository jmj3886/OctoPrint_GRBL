<div id="settings_plugin_OctoPrint_GRBL_ToolProfiles">
    <h3>{{ _('Tool Profiles') }}</h3>
    <table class="table table-striped table-hover table-condensed table-hover" id="settings_toolProfiles_profiles" style="display: none">
        <thead>
        <tr>
            <th class="settings_toolProfiles_profiles_name">{{ _('Name') }}</th>
            <th class="settings_toolProfiles_profiles_model">{{ _('Generic Type') }}</th>
            <th class="settings_toolProfiles_profiles_action">{{ _('Action') }}</th>
        </tr>
        </thead>
        <tbody data-bind="foreach: toolProfiles">
        <tr data-bind="attr: {title: name}">
            <td class="settings_toolProfiles_profiles_name">
                <span data-bind="text: name, style: { 'font-weight': is_current ? 'bold' : 'normal' }"></span></td>
            <td class="settings_toolProfiles_profiles_model" data-bind="text: type"></td>
            <td class="settings_toolProfiles_profiles_action">
                <a href="#" class="fas fa-pencil-alt" title="{{ _('Edit Profile')|edq }}" data-bind=""></a>
                &nbsp;|&nbsp;
                <a href="#" class="far fa-trash-alt" title="{{ _('Delete Profile')|edq }}" data-bind=""></a>
            </td>
        </tr>
        </tbody>
    </table>

    <button class="btn pull-right" data-bind=""><i class="fas fa-plus"></i> {{ _('Add Profile...') }}</button>
</div>